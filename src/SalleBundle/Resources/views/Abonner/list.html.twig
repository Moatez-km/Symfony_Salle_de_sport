<script>

    function myFunction() {
        var x = document.getElementById("myTopnav");
        if (x.className === "topnav") {
            x.className += " responsive";
        } else {
            x.className = "topnav";
        }
    }

    $(document).ready(function() {
        var slideHeight = $(window).height() ;
        $('.background').css('height',slideHeight/1.7);

        $("div#galery div").click(function() {
            var myClass = $(this).attr("class");

        });

        var i = 1
        setInterval(function(){
            $("#fadeImg").fadeOut(1500,function(){
                var atr = ["ba1","ba2","ba3","ba4"]

                $("#fadeImg").fadeIn(1000);
                if( i == 4 ){
                    $("#fading-slide").removeClass(atr[i])
                    i = 1;
                    $("#fading-slide").addClass(atr[i])

                }else{
                    $("#fading-slide").removeClass(atr[i])
                    i++;
                    $("#fading-slide").addClass(atr[i])
                }
            });


        }, 5000);


    });

    function showimage(id){
        var modal = document.getElementById("myModal");
        var span = document.getElementsByClassName("close")[0];
        var atr = "back"+id
        $("#modal-img").removeClass()
        $("#modal-img").addClass("height")
        $("#modal-img").addClass(atr)
        modal.style.display = "block";
        span.onclick = function() {
            modal.style.display = "none";
        }
        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
        console.log(id)
    }

</script>
